<p id="notice"><%= notice %></p>

<h4>Listing Mentors</h4>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Dob</th>
      <th>Sex</th>
      <th>Bio</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mentors.each do |mentor| %>
      <tr>
        <td><%= mentor.Name %></td>
        <td><%= mentor.Age %></td>
        <td><%= mentor.DOB%></td>
        <td><%= mentor.Sex%></td>
        <td><%= mentor.Bio %></td>
        <td><%= image_tag mentor.avatar.url %></td>
        <td><%= link_to 'Show', mentor, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_mentor_path(mentor), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Destroy', mentor, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mentor', new_mentor_path, class: 'btn btn-success' %>
