<p id="notice"><%= notice %></p>

<h4>Listing Students</h4>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Dob</th>
      <th>Score</th>
      <th>School</th>
      <th>Level</th>
      <th>Sex</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.Name %></td>
        <td><%= student.Age %></td>
        <td><%= student.DOB %></td>
        <td><%= student.Score %></td>
        <td><%= student.School %></td>
        <td><%= student.Level %></td>
        <td><%= student.Sex %></td>
        <td><%= link_to 'Show', student, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path, class: 'btn btn-success' %>
